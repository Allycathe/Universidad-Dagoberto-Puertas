<h1>Recursos</h1>
<div class="table-responsive" id="no-more-tables">
    <table class="table">
        <thead>
            <tr>
                <th>Código recurso</th>
                <th>Nombre</th>
                <th>Copias</th>
                <th>Disponibilidad</th>
                <th>Autor</th>
                <th>Publicación</th>
                <th>Formato</th>
                <th>Codigo edificio</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            {{#each lista}}
            <tr>
                <td>{{this.codigo_recurso}}</td>
                <td>{{this.nombre}}</td>
                <td>{{this.copias}}</td>
                <td>{{this.disponibilidad}}</td>
                <td>{{this.autor}}</td>
                <td>{{this.publicacion}}</td>
                <td>{{this.formato}}</td>
                <td>{{this.codigo_edificio}}</td>
                <td>
                    <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modificarCarreraModal" 
                        data-id="{{this.codigo_carrera}}" data-nombre="{{this.nombre}}" data-duracion="{{this.duracion}}">
                        Modificar
                    </button>
                    <form action="/carrera/eliminar/{{this.codigo_carrera}}" method="post">
                    <button type="submit" class="btn btn-danger mt-2">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#crearRecursoModal">Agregar recurso</button>

<div class="modal fade" id="crearRecursoModal" tabindex="-1" aria-labelledby="crearRecursoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="crearRecursoModalLabel">Agregar Recurso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/recursos/insertar">
                    <div class="form-group mb-3">
                        <label for="codigo_recurso">Código Recurso:</label>
                        <input type="text" class="form-control" name="codigo_recurso" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" name="nombre" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="copias">Copias:</label>
                        <input type="number" class="form-control" name="copias" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="disponibilidad">Disponibilidad:</label>
                        <input type="text" class="form-control" name="disponibilidad" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="autor">Autor:</label>
                        <input type="text" class="form-control" name="autor" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="publicacion">Fecha de publicación:</label>
                        <input type="date" class="form-control" name="publicacion" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="formato">Formato:</label>
                        <input type="text" class="form-control" name="formato" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="codigo_edificio">Código Edificio:</label>
                        <input type="text" class="form-control" name="codigo_edificio" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar Recurso</button>
                </form>
            </div>
        </div>
    </div>
</div>