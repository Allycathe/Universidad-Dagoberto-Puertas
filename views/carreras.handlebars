<div class="table-responsive" id="no-more-tables">
    <table class="table">
        <thead>
            <tr>
                <th>Código carrera</th>
                <th>Nombre</th>
                <th>Duración</th>
            </tr>
        </thead>
        {{#each lista}}
        <tbody>
            <tr>
                <td>{{this.codigo_carrera}}</td>
                <td>{{this.nombre}}</td>
                <td>{{this.duracion}}</td>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>
<button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#crearCarreraModal">Agregar carrera</button>
<button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#eliminarCarreraModal">Eliminar carrera</button>

<div class="modal fade" id="crearCarreraModal" tabindex="-1" aria-labelledby="crearCarreraModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="crearCarreraModalLabel">Agregar edificio</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="POST" action="/carrera/insertar">
                        <div class="form-group mb-3">
                            <label for="nombre">Codigo:</label>
                            <input type="text" class="form-control" name="codigo" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="nombre">Nombre:</label>
                            <input type="text" class="form-control" name="nombre" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="duracion">Duración:</label>
                            <textarea class="form-control" name="duracion" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Agregar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="eliminarCarreraModal" tabindex="-1" aria-labelledby="eliminarCarreraModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="crearCarreraModalLabel">Agregar edificio</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="DELETE" action="/carrera/eliminar">
                        <div class="form-group mb-3">
                            <label for="nombre">Codigo:</label>
                            <input type="text" class="form-control" name="codigo" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Agregar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>