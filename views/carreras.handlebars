<div class="table-responsive" id="no-more-tables">
    <table class="table">
        <thead>
            <tr>
                <th>C贸digo carrera</th>
                <th>Nombre</th>
                <th>Duraci贸n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each lista}}
            <tr>
                <td>{{this.codigo_carrera}}</td>
                <td>{{this.nombre}}</td>
                <td>{{this.duracion}}</td>
                <td>
                    <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modificarCarreraModal" 
                        data-id="{{this.codigo_carrera}}" data-nombre="{{this.nombre}}" data-duracion="{{this.duracion}}">
                        Modificar
                    </button>
                    <form action="/carrera/eliminar/{{this.codigo_carrera}}" method="post">
                    <button type="submit" class="btn btn-danger mt-2">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#crearCarreraModal">Agregar carrera</button>


<div class="modal fade" id="crearCarreraModal" tabindex="-1" aria-labelledby="crearCarreraModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar carrera</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/carrera/insertar">
                    <div class="form-group mb-3">
                        <label for="codigo">C贸digo:</label>
                        <input type="text" class="form-control" name="codigo" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" name="nombre" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="duracion">Duraci贸n:</label>
                        <textarea class="form-control" name="duracion" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </form>
            </div>
        </div>
    </div>
</div>