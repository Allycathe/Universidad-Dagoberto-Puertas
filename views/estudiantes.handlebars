<h1> Aqui deberia mostar todos los estudiantes</h1>

<div class="table-responsive" id="no-more-tables">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>Rut</th>
                <th>Número</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        {{#each lista}}
        <tbody>
            <tr>
                <td>{{this.id_estudiante}}</td>
                <td>{{this.nombre}}</td>
                <td>{{this.apellido}}</td>
                <td>{{this.edad}}</td>
                <td>{{this.rut}}</td>
                <td>{{this.numero}}</td>
                <td>{{this.correo}}</td>
                <td>
                    <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modificarEstudianteModal" >
                        Modificar
                    </button>
                    <form action="/estudiantes/eliminar/{{this.id_estudiante}}" method="post">
                    <button type="submit" class="btn btn-danger mt-2">Eliminar</button>
                    </form>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>
<button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#crearCarreraModal">Agregar carrera</button>

<div class="modal fade" id="modificarEstudianteModal" tabindex="-1" aria-labelledby="modificarEstudianteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modificarEstudianteModalLabel">Modificar Estudiante</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/estudiantes/modificar">
                    <input type="hidden" id="idEstudiante" name="id">
                    <div class="form-group mb-3">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" id="nombreEstudiante" name="nombre" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="edad">Edad:</label>
                        <input type="number" class="form-control" id="edadEstudiante" name="edad" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="rut">RUT:</label>
                        <input type="text" class="form-control" id="rutEstudiante" name="rut" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="numero">Número:</label>
                        <input type="text" class="form-control" id="numeroEstudiante" name="numero" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="correo">Correo:</label>
                        <input type="email" class="form-control" id="correoEstudiante" name="correo" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </form>
            </div>
        </div>
    </div>
</div>
