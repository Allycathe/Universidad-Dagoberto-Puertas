<div class="container mt-5">
        <h1>Consultar inscritos por ramo</h1>
        <form action="/consultas/inscritos-ramo" method="POST" class="mt-3">
            <div class="mb-3">
                <label for="ramo" class="form-label">Seleccione un ramo:</label>
                <select id="ramo" name="codigo_ramo" class="form-select" required>
                    <option value="" disabled selected>Seleccione un ramo</option>
                    {{#each ramos}}
                        <option value="{{codigo_ramo}}">{{nombre}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Consultar</button>
        </form>
</div>